<div class="blog__post__form">
  <%= render 'shared/errors', obj:@user %>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control', placeholder: 'Username', autocomplete: 'false' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: 'Email', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Create Password', required: true,
                           autocomplete: 'false' %>
    </div>
    <div class="form-group mt-3">
      <%= f.submit(@user.new_record? ? "Signup" : "Updated Account Settings", class:'btn btn-lg btn-success')%>
    </div>
  <%end %>
</div>